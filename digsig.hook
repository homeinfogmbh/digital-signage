[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = digital-signage

[Action]
Description = Updating ownership of digital signage directories...
When = PostTransaction
Exec = /usr/bin/chown -R digsig.digsig /var/lib/digsig /usr/share/digsig
